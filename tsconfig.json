{
    "compilerOptions": {
        "jsx": "react",
        "target": "ES2021",
        "module": "CommonJS",

        "sourceMap": true,
        "outDir": "./dist",
        // "rootDir": "./",

        "strict": true,

        "moduleResolution": "node",

        "esModuleInterop": true,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": ["es6", "dom"],

        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["node_modules", "coverage", "src/__tests__", "jest.*"]
}
